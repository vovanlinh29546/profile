<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thêm Sản Phẩm"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:background="#ff8008"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imgSanPham"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/add__image"
        android:visibility="visible"/>
        <TextView
            android:id="@+id/tvComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:textSize="20dp"
            android:textColor="#ff0000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn mã loại"
            android:textColor="#000"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/spnMaLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtMaSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Mã sản phẩm"/>
        </com.google.android.material.textfield.TextInputLayout>
        <EditText
            android:id="@+id/edtTenSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên sản phẩm"/>
        <EditText
            android:id="@+id/edtSLSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Nhập số lượng sản phẩm"/>
        <EditText
            android:id="@+id/edtGiaSanPham"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:hint="Nhập giá sản phẩm"/>
        <EditText
            android:id="@+id/edtMoTaSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mô tả sản phẩm"/>

        <EditText
            android:id="@+id/edtKLSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập trọng lượng sản phẩm"/>

        <EditText
            android:id="@+id/edtCCSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập nhà cung cấp sản phẩm"/>

        <EditText
            android:id="@+id/edtTHSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập thương hiệu sản phẩm"/>

        <EditText
            android:id="@+id/edtHDSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập hướng dẫn sản phẩm"/>
    </LinearLayout></ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/stt_theloai"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:text="1"/>
        <View
            android:id="@+id/daugach1"
            android:layout_gravity="center"
            android:layout_width="1.5dp"
            android:layout_toRightOf="@id/stt_theloai"
            android:layout_height="50dp"
            android:layout_marginRight="7dp"
            android:background="#ff8008" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matheloai"
            android:textColor="@color/colorPrimaryDark"
            android:text="Mã thể loại: "
            android:padding="2dp"
            android:layout_toRightOf="@id/daugach1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matheloai_1row"
            android:text="                   Mã"
            android:textAllCaps="true"
            android:padding="2dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/matheloai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tentheloai"
            android:layout_below="@id/matheloai"
            android:textColor="@color/colorPrimaryDark"
            android:text="Tên thể loại: "
            android:padding="2dp"
            android:layout_toRightOf="@id/daugach1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tentheloai_1row"
            android:text="          Tên "
            android:padding="2dp"
            android:layout_below="@id/matheloai"
            android:layout_toRightOf="@id/tentheloai" />

        <ImageView
            android:id="@+id/popup_theloai"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/icon_popupmenu" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

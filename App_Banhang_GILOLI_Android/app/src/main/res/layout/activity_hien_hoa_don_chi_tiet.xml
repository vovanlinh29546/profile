<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.giloli.Activity.HienHoaDonChiTietActivity"
    android:orientation="vertical">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff8008">
        <ImageView
            android:id="@+id/backHienHoaDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lí hoá đơn"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/maHoaDonAo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="maAo"
            android:visibility="gone"/>
    </Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCTHD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.giloli.Activity.ChiTietSPActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:background="#ff8008"
        android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/imgBackCTSP"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_arrow_back_black_24dp"
               android:layout_alignParentLeft="true"
               android:layout_marginRight="20dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:text="Chi tiết sản phẩm"
               android:layout_toRightOf="@id/imgBackCTSP"
               android:id="@+id/txttitlectsp"
               android:textSize="25dp"
               android:textColor="#fff"
               android:layout_height="wrap_content"/>
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:id="@+id/ctsp_giohang"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp">
               <ImageView
                   android:id="@+id/img_shop_ctsp"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:background="@drawable/ic_shopping_cart_black_24dp"
                   android:layout_weight="1"
                   android:layout_margin="5dp"
                   android:contentDescription="bell"
                   android:layout_gravity="center_vertical"
                   />
               <TextView
                   android:id="@+id/txtcount_shop_ctsp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="0"
                   android:layout_alignTop="@id/img_shop_ctsp"
                   android:layout_alignRight="@id/img_shop_ctsp"
                   android:minWidth="17sp"
                   android:textSize="12sp"
                   android:background="@drawable/count_rount"
                   android:visibility="gone"></TextView>
           </RelativeLayout>

       </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp">
        <Button
            android:id="@+id/btnThemVaoGioHang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thêm vào giỏ hàng"
            android:gravity="center"
            android:background="#ff8008"
            android:textColor="#fff"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_marginTop="55dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerCTSP"
                android:layout_width="match_parent"
                android:layout_height="250dp"></androidx.viewpager.widget.ViewPager>

            <TextView
            android:id="@+id/txtTenCTSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đèn bàn LED TFX772 chống cận thị cho bé - Hàng chính hãng Bảo hành 3 tháng"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_margin="15dp"
            />
            <TextView
                android:id="@+id/txtGiaCTSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="115000.0 đ"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="#ff8008"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                >
                <ImageView
                    android:id="@+id/imgGuarantee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/security"
                    android:layout_alignParentLeft="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/policy" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/undo"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/txtBT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgGuarantee"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="Bồi thường"
                    android:textColor="#000" />
                    <TextView
                        android:id="@+id/txtHG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120%"
                        android:layout_marginLeft="20dp"
                        android:layout_below="@+id/txtBT"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nếu hàng giả"
                    android:layout_below="@+id/txtHG"
                    android:textColor="#000"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian bảo"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000"
                    android:layout_below="@+id/imgGuarantee"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hành: 24 tháng"
                    android:layout_below="@+id/txtTime"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txtReturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đổi trả trong"
                    android:layout_below="@+id/imgGuarantee"
                    android:textColor="#000"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 ngày"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_below="@+id/txtReturn"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nếu sp lỗi"
                    android:textColor="#000"
                    android:layout_below="@+id/txtDate"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết sản phẩm"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/txtDanhMuc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danh mục"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/txtDM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtDanhMuc"
                    android:text="Xe máy"
                    android:layout_marginLeft="30dp"
                    android:textColor="#000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/txtCungCap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cung cấp bởi"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/txtCC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtCungCap"
                    android:text="VMrmart"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/txtThuongHieu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thương hiệu"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/txtTH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtThuongHieu"
                    android:text="Enfa"
                    android:layout_marginLeft="13dp"
                    android:textColor="#000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/txtTrongLuong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trọng lượng"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/txtTL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtTrongLuong"
                    android:text="VMrmart"
                    android:layout_marginLeft="16dp"
                    android:textColor="#000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/txtHuongDan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hướng dẫn"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/txtHD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtHuongDan"
                    android:text="VMrmart"
                    android:layout_marginLeft="23dp"
                    android:textColor="#000"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả sản phẩm"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_margin="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtMT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thiết kế hiện đại, chất liệu"
                android:layout_margin="10dp"
                android:textColor="#000"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtNhanXet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khách hàng nhận xét"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <Button
                android:id="@+id/btnNhanXet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Viết nhận xét"
                android:background="@drawable/bg_btn_nx"
                android:layout_margin="10dp"
                android:textColor="#0033FF"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rcv_ctsp_nhanxet"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_ctsp_xemtatcanx"
                android:layout_gravity="center_horizontal"
                android:text="Xem tất cả"
                android:textColor="#0088ff"
                android:textSize="20dp"></TextView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>